//prerfect Number
//sum of factors of a given number is equal to the number is called perfect number.
#include<stdio.h>
#include<conio.h>
void main()
{
    int i,n,sum=0;                            //Initialization and declaration
    printf("Enter the number:");
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        if(n%i==0)
        {
        sum=sum+i;                //we can do like this also sum+=i
        }
    
    }
    if(n==sum)
    printf("Its a perfect number");
    else
    printf("Its not a perfect number");
}

